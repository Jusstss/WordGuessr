<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.GameController"
      prefWidth="600" prefHeight="400" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Welcome to WordGuessr!" style="-fx-font-size: 20px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Guess a word:"/>
        <TextField fx:id="userInputField" promptText="Type here..." />
        <Button text="Guess" onAction="#handleGuess"/>
    </HBox>

    <Label fx:id="feedbackLabel" style="-fx-font-size: 16px;"/>

    <Button text="Start New Game" onAction="#startNewGame" style="-fx-font-size: 16px;"/>

</VBox>




